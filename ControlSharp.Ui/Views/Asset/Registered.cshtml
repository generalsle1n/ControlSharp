@using System.Text
@using ControlSharp.Model.Database.Assets
@inject IHttpClientFactory ClientFactory
@model IEnumerable<Asset>
@{
    ViewData["Title"] = "Assets";
}

<table class="table table-striped table-hover">
    <thead class="">
        <tr>
            <th>Name</th>
            <th>Active</th>
            <th>LastOnline</th>
            <th>IP</th>
            <th>Created</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
    @foreach (Asset SingleAsset in Model)
    {
        <tr>
            <td>@SingleAsset.Name</td>
            <td>@SingleAsset.Active</td>
            <td>@SingleAsset.LastOnline</td>
            <td>@SingleAsset.Ip</td>
            <td>@SingleAsset.Created</td>
            <td>
                <div class="btn-group">
                    <form asp-controller="Asset" asp-action="DeleteClient">
                        <input type="hidden" name="Id" value="@SingleAsset.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">
                            <span class="bi-ban" />
                        </button>
                    </form>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>