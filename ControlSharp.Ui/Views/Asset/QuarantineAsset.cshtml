@using System.Text
@using ControlSharp.Database.Identity.Model
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject IHttpClientFactory ClientFactory
@model IEnumerable<Asset>
@{
    ViewData["Title"] = "Assets";
}

<table class="table table-striped table-hover">
    <thead class="">
        <tr>
            <th>Name</th>
            <th>Active</th>
            <th>LastOnline</th>
            <th>IP</th>
            <th>Created</th>
            <th>Hash</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
    @foreach (Asset SingleAsset in Model)
    {
        <tr>
            <td>@SingleAsset.Name</td>
            <td>@SingleAsset.Active</td>
            <td>@SingleAsset.LastOnline</td>
            <td>@SingleAsset.Ip</td>
            <td>@SingleAsset.Created</td> 
            <td>@SingleAsset.Hash</td>
            <td>
                <div class="btn-group">
                    <button type="button" class="btn btn-success btn-sm">
                        <span class="bi-plus"/>
                    </button>
                    <button type="button" class="btn btn-danger btn-sm">
                        <span class="bi-trash3"/>
                    </button>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>